@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1 class="text-center mt-5">@ViewData["Title"]</h1>
<p class="text-center col-10 mx-auto text-muted" style="font-size:0.7em;">The log in is for Christar to access the messages. You do not need to log in to submit a message</p>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form id="account" method="post">
                <div class="form-group">
                    <input type="email" asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="Email" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <input type="password" asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Password" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group form-check mt-4">
                    <input type="checkbox" class="form-check-input" asp-for="Input.RememberMe" />
                    <label asp-for="Input.RememberMe" class="form-check-label">Remember me</label>
                </div>
                <button type="submit" class="btn btn-primary btn-block mt-4 col-5">Log in</button>
                
            </form>
            <hr />
            
            
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
