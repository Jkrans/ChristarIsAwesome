@model ChristarIsAwesome.Pages.Post.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>From @Html.DisplayFor(model => model.AwesomePost.name)</h4>
    <hr />
    <dl class="row">
        
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AwesomePost.post)
        </dd>
        <hr />
        <dd class="col-sm-10">
            <i class="fa-regular fa-heart"></i> @Html.DisplayFor(model => model.AwesomePost.name)
        </dd>
    </dl>
</div>
