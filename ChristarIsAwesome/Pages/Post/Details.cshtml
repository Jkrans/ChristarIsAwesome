@page
@model ChristarIsAwesome.Pages.Post.DetailsModel
@using Services

@{
    ViewData["Title"] = "Message";
}

<div style="padding-left:1.7em; padding-right:1.7em;">
    <h4 class="fafont" style="font-size: 1.6em;">
        @{
            var name = Model.AwesomePost.name;
            if (name.Contains("Jack"))
            {
                <text>@SD.Mommy</text>;
            }
            else
            {
                <text>@SD.Name</text>;
            }
        }
    </h4>
    
    <dl class="row">
        
        <dd class="col-sm-12">
            @Html.DisplayFor(model => model.AwesomePost.post)
        </dd>
        <hr />
        <dd class="col-sm-12 fafont" style="font-size: 1.4em;">
            <i class="fa-regular fa-heart"></i> @Html.DisplayFor(model => model.AwesomePost.name)
        </dd>
    </dl>
</div>
<div class="mt-5" style="padding-left:1.7em; padding-right:1.7em;">
    <a class="btn btn-outline-danger neubutton" asp-page="./Delete" asp-route-id="@Model.AwesomePost?.Id">Delete</a>
    <a class="btn btn-outline-secondary neubutton mx-2" asp-page="./Index">Back to List</a>
</div>
