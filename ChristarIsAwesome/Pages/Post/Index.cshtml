@page
@model ChristarIsAwesome.Pages.Post.IndexModel
@using Services
@{
    ViewData["Title"] = "Posts";
}


@if (User.Identity.IsAuthenticated)
    {
    <h4>Love For @SD.Name</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    From
                </th>
                
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AwesomePost)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                   
                    <td class="text-end">
                        <a class="btn btn-primary btn-sm" asp-page="./Details" asp-route-id="@item.Id">See Message</a>                        
                    </td>
                </tr>
                }
        </tbody>
    </table>
}
else
{
        <h5>You're not @SD.Name</h5>
        <p>This is an environment of welcoming, and you should just get the hell out of here.</p>
}
