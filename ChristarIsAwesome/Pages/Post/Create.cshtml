@page
@model ChristarIsAwesome.Pages.Post.CreateModel
@using Services
@{
    ViewData["Title"] = "Love For Christar";
}

<h4>Write to @SD.Name</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                
                <label asp-for="AwesomePost.post" class="control-label">Write here <i class="fa-solid fa-pencil"></i> :</label>
                <textarea asp-for="AwesomePost.post" class="form-control neubutton" rows="8" style="white-space: pre-wrap;"></textarea>
                <span asp-validation-for="AwesomePost.post" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="AwesomePost.name" class="control-label">Your name: </label>
                <input asp-for="AwesomePost.name" class="form-control neubutton" />
                <span asp-validation-for="AwesomePost.name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group mt-1">
                <input type="submit" value="Submit" class="btn btn-primary neubutton col-5" />
            </div>
        </form>
    </div>
    <div class="col-md-7 mt-3">
        <div class="form-group" style="font-size:1.2em;" >
            
            <ul style="list-style-type: none; padding-left:0;">
                <li class="pb-4">Not sure what to write? Here are some ideas to get you started:</li>
                <li class="pb-2"><i class="fas fa-comment-alt" style="color: darkslateblue;"></i> Write a personal message, sharing your thoughts and feelings about your relationship</li>
                <li class="pb-2"><i class="fas fa-laugh-beam" style="color: darkorange;"></i> Tell a funny story about the two of you that will make her laugh</li>
                <li class="pb-2"><i class="fas fa-heart" style="color: red;"></i> Express your gratitude for her support and how she's made a positive impact in your life</li>
                <li class="pb-2"><i class="fas fa-rainbow" style="color: darkolivegreen;"></i> Share a special memory or moment that you will always cherish</li>
                <li class="pb-2"><i class="fas fa-handshake" style="color: mediumpurple;"></i> Let her know how much you appreciate her friendship and how much she means to you</li>
                <li class="pb-2"><i class="fas fa-thumbs-up" style="color: deeppink;"></i> Write about the qualities that make her a great person and why you admire them</li>
                <li class="pb-2"><i class="fas fa-person-breastfeeding" style="color: rebeccapurple;"></i> Describe how she has inspired you</li>

            </ul>
        </div>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
