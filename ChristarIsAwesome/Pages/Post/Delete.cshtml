@page
@model ChristarIsAwesome.Pages.Post.DeleteModel

@{
    ViewData["Title"] = "Delete";
}



<h3>Are you sure you want to delete this message from @Html.DisplayFor(model => model.AwesomePost.name)?</h3>
<div>
    <hr />

    <p>To confirm deletion, type "delete" in the box below:</p>
    <div class="col-5">
        <input type="text" id="confirmText" class="form-control" />
    </div>
   

    <form method="post" class="mt-3">
        <input type="hidden" asp-for="AwesomePost.Id" />
        <input type="submit" value="Confirm Delete" class="btn btn-danger" id="confirmButton" disabled />
        <a class="btn btn-outline-secondary" asp-page="./Index">Back to List</a>
    </form>
</div>

<script>
    document.getElementById("confirmText").oninput = function () {
        const deleteButton = document.getElementById("confirmButton");
        if (this.value.toLowerCase() === "delete") {
            deleteButton.disabled = false;
        } else {
            deleteButton.disabled = true;
        }
    };
</script>
